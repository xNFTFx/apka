@model IEnumerable<apka.Models.Produkt>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nazwa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdKategoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdPoziom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdAutor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdSkladnik)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdKategoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPoziom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdAutor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdSkladnik)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdProdukt">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdProdukt">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdProdukt">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
